server {
    listen ${LISTEN_PORT};
    server_name _;

    location / {
        root    /usr/share/nginx/html;
        index   index.html index.htm;
        try_files $uri $uri/ /index.html;
    }

    # Optional: Silence access logs for favicon
    location = /favicon.ico {
        log_not_found off;
        access_log off;
    }

    # Optional: Silence access logs for robots.txt
    location = /robots.txt {
        log_not_found off;
        access_log off;
    }

    # Optional: Add security headers (example)
    # add_header X-Frame-Options "SAMEORIGIN" always;
